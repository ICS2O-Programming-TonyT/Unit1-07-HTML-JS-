{
  "enabled": true,
  "validators": {
    "css": {
      // CSS linter configuration
    },
    "html": {
      "enabled": true,
      "configFile": ".htmlhintrc", // Optional, if you have a specific HTML linter configuration file
      "excludes": [
        "**/node_modules/**"
      ],
      "partial": {
        "alt-require": true,
        "attr-lowercase": false,
        "attr-no-duplication": false,
        "attr-unsafe-chars": true,
        "attr-value-double-quotes": false,
        "attr-value-not-empty": false,
        "doctype-first": false,
        "doctype-html5": true,
        "head-script-disabled": false,
        "href-abs-or-rel": false,
        "html-lang-require": true,
        "id-class-ad-disabled": true,
        "id-class-value": true,
        "id-unique": false,
        "inline-script-disabled": false,
        "inline-style-disabled": false,
        "space-tab-mixed-disabled": false,
        "spec-char-escape": false,
        "src-not-empty": true,
        "style-disabled": false,
        "tag-pair": false,
        "tag-self-close": false,
        "tagname-lowercase": true,
        "title-require": false
      }
    },
    "javascript": {
      // JavaScript linter configuration
    },
    "json": {
      // JSON linter configuration
    },
    "markdown": {
      // Markdown linter configuration
    },
    "python": {
      // Python linter configuration
    }
  }
}
